    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Module",
            "type": "python",
            "request": "launch",
            "module": "tools.controller",
            "justMyCode": true
        },
        {
            "name": "test current file",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "justMyCode": true,
            "cwd": "${workspaceFolder}"
        },
        {
            "name": "Gradio",
            "type": "python",
            "request": "launch",
            "program": "chatbot_v2.py",
            "console": "integratedTerminal",
            "justMyCode": false
        },
        {
            "name": "streamlit",
            "type": "python",
            "request": "launch",
            "module": "streamlit",
            "justMyCode": false,
            "args": [
                "run",
                "home.py",
                "--server.port",
                "9044"
            ],
            "env": {
                "DEBUG": "true"
            }
        }
    ]
}